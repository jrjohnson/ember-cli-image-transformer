{
  "private": true,
  "license": "MIT",
  "author": "Jonathan Johnson (jon.johnson@ucsf.edu)",
  "scripts": {
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "test": "pnpm --filter '*' --workspace-concurrency=1 test",
    "start:test-app": "pnpm run --filter test-app start",
    "test:test-app": "pnpm run --filter test-app test",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2"
  },
  "engines": {
    "node": "16.* || >= 18",
    "yarn": "use pnpm",
    "npm": "use pnpm"
  },
  "packageManager": "pnpm@8.6.12",
  "pre-commit": [
    "lint"
  ]
}
